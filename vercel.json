{
  "version": 2,
  "builds": [
    {
      "src": "app/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "zeroConfig": true,
        "workPath": "app/web"
      }
    },
    {
      "src": "app/server/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/app/server/src/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/app/web/dist/index.html"
    }
  ]
}